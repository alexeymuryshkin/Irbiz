<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="muryshkin.alexey.irbiz.Activity.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#000000"
            android:id="@+id/resultRelativeLayout"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:minHeight="200dp"
                android:maxHeight="230dp"
                android:src="@drawable/main_result_image"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/profileImageView"
                />

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-5dp"
                android:background="#80000000"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-5dp"
                android:padding="5dp"
                android:src="@drawable/irbiztext"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/flag"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="65dp"
                android:background="#80000000"
                android:gravity="center"
                android:text="Я знаю нашу олимпийскую сборную на 101%!"
                android:textColor="#FFFFFF"
                android:textSize="21dp"
                android:id="@+id/congratulationsTextView"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:id="@+id/medalImageView"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Можете выбрать другую картинку"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:id="@+id/changeImageTextView"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/design_textview_result"
            android:text="Результат:"
            android:textSize="28dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="28dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@+id/scoreTextView"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_textview_best_result"
            android:text="Лучший Результат:"
            android:textSize="28dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="28dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id="@+id/bestScoreTextView"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:gravity="center"
                android:src="@drawable/ic_home_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/homeImageButton"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:gravity="center"
                android:src="@drawable/ic_replay_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/restartImageButton"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:gravity="center"
                android:src="@drawable/ic_share_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/shareImageButton"
                />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@android:color/white"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
