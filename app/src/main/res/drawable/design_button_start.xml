<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#60FFFFFF" />
            <solid
                android:color="#00FFFFFF"/>
            <corners
                android:radius="15dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#FFFFFFFF" />
            <solid
                android:color="#60FFFFFF"/>
            <corners
                android:radius="15dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>